if indice<MAX-1){
Printf("Dame el dato a insertar:");
Scanf(%d,&dato);
Insertar(dato);
}
else
printf("Error, no hay espacio en el arreglo\n");
break;
 
 
 
 
 
 
 
 
 
 
 }while(opcion!=7)
 }
